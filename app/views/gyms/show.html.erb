<div class="container">
  <div class="row justify-content-center align-items-center" style="margin-top: 200px;">
    <div class="col-6">
      <% if @gym.photo.attached? %>
        <%= cl_image_tag @gym.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <h3><%= @gym.name %></h3>
      <p>Location: <%= @gym.location %></p>
      <p>Gym type: <%= @gym.type_of_gym %></p>
      <p>Equipment: <%= @gym.equipment %></p>
    </div>
    <% if @gym.user != current_user %>
      <%= render 'bookings/form', gym: @gym, booking: @booking %>
      <% end %>
  </div>
</div>

<div id="map"
  style="width: 100%; height: 100px"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>





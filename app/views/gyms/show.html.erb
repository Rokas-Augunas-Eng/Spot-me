<div class="show-page">
  <div class="container">
    <div class="row align-items-center mt-4">
      <div class="col-12">
        <h3><%= @gym.name %></h3>
        <p><i class="fas fa-compass"></i> <%= @gym.location %></p>

        <p><i class="fas fa-money-bill"></i> Â£<%= @gym.cost %> per hour</p>

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <%# <div class="carousel-item active"> %>
            <%= cl_image_tag @gym.photo.key, height: 600, width: 1200 %>
              <%# <img class="d-block w-100" src="https://picsum.photos/1280/720?random=1" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://picsum.photos/1280/720?random=2" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://picsum.photos/1280/720?random=3" alt="Third slide"> %>
            <%# </div> %>
          </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
        </div>  
      
        <div class="parent" style="display:flex; justify-content:space-between; margin: 20px 10px;">
          <div class="info">
            <h3 style="width: 100%">What this gym offers</h3>

            <%= @gym.equipment %>
          
          </div>
          <div class="booking-info" style="width: 100%">
            <%= render 'bookings/form', gym: @gym, booking: @booking %>
          </div>
        </div>

        <div id="map"
          style="width:100%; height: 400px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
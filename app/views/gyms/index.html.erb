<h2>Gyms in the selected area</h2>
  <div class="row">
    <div class="col">
    <% @gyms.each do |gym| %>
      <div class="card-product">
      <img src="https://www.leisureopportunities.co.uk/images/2020/HIGH346040_712133_137408.jpg" />
        <div class="card-product-infos">
          <%= link_to gym, gym_path(gym) %>
          <%= gym.type_of_gym %> in <%= gym.location %>
          <%= gym.name %>
          <%= gym.equipment %>
        </div>
      </div>
        <% end %> 
    </div>
  <div class="col">
    <div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
</div>

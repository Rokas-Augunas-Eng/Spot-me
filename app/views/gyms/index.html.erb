<div class="index-page">
  <h2 class="index-title">Gyms in the selected area</h2>
  <div class="index-container">
    <div class="left">
    <div class="index-cards">
      <% @gyms.each do |gym| %>
      <%= link_to gym_path(gym) do %>
      <div class="card-product">
        <% if gym.photo.attached? %>
          <%= cl_image_tag gym.photo.key, height: 240, width: 360, crop: :fill %>
        <% else %>
          <img src="https://www.leisureopportunities.co.uk/images/2020/HIGH346040_712133_137408.jpg" />
        <% end %>
        <div class="card-product-infos">
          <h2><%= gym.name %></h2>
          <p><i class="fas fa-running"></i> <%= gym.type_of_gym %></p>
          <p><i class="fas fa-dumbbell"></i> <%= gym.equipment %></p>
          <p><i class="fas fa-compass"></i> <%= gym.location %></p>
          <p><i class="fas fa-money-bill"></i> Â£<%= gym.cost %> per hour</p>
        </div>
      </div>
      <% end %> 
      <% end %> 
      </div>
    </div>

    <div class="right">
      <div id="map"
        style="width: 100%; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
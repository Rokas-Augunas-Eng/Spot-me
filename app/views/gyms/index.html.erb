<h2>Gyms in the selected area</h2>
  <div class="row">
    <div class="col">
    <% @gyms.each do |gym| %>
      <div class="card-product">
      <img src="https://www.leisureopportunities.co.uk/images/2020/HIGH346040_712133_137408.jpg" />
        <div class="card-product-infos">
          <p><%= link_to gym.name, gym_path(gym) %></p>
          <p>Gym type: <%= gym.type_of_gym %></p>
          <p>Equipment: <%= gym.equipment %></p>
          <p>Location: <%= gym.location %></p>
        </div>
      </div>
        <% end %> 
    </div>
  <div class="col">
    <div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  </div>
